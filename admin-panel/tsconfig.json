{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "preserve",
        "types": [
            "node"
        ],
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
    }
}