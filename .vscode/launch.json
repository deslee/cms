{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Frontend: Chrome",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/admin-panel",
            "cwd": "${workspaceFolder}/admin-panel"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Frontend: Server",
            "args": [
                "--inspect",
                "${workspaceFolder}/admin-panel/debug.js"
            ],
            "console": "integratedTerminal",
            "env": {
                "PORT": "3001"
            },
            "protocol": "inspector",
            "cwd": "${workspaceFolder}/admin-panel"
        },
        {
            "name": ".NET Core Launch (GraphQL)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Content.GraphQL/bin/Debug/netcoreapp2.2/Content.GraphQL.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Content.GraphQL",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:3000/"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Frontend",
            "configurations": ["Frontend: Server", "Frontend: Chrome"]
        }
    ]
}