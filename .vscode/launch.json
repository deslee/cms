{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Frontend: Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}/admin-panel",
            "cwd": "${workspaceFolder}/admin-panel"
        },
        {
            "name": ".NET Core Launch (Asset Job Runner)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildasset",
            "program": "${workspaceFolder}/Content.Asset.Job.Runner/bin/Debug/netcoreapp2.2/Content.Asset.Job.Runner.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Content.Asset.Job.Runner",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
            }
        },
        {
            "name": ".NET Core Launch (GraphQL)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildgraphql",
            "program": "${workspaceFolder}/Content.GraphQL/bin/Debug/netcoreapp2.2/Content.GraphQL.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Content.GraphQL",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:3000/"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}